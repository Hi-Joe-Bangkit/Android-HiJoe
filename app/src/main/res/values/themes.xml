<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiJoe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textViewStyle">@style/Theme.HiJoe.DefaultTextView</item>
    </style>

    <style name="Theme.HiJoe.DefaultTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/soft_dark</item>
    </style>

    <style name="Theme.HiJoe.SplashText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/soft_dark</item>
    </style>

    <style name="Theme.HiJoe.H1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/soft_dark</item>
    </style>

    <style name="Theme.HiJoe.CircleImageView">
        <item name="cornerSize">50%</item>
    </style>
</resources>